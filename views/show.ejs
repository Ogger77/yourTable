<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= user.firstName %></div>
    <div class="ui top attached">
        <div class="item">
            <div class="content">
                <span><%= user.created.toDateString() %></span>
            </div>
            <div class="description">
                <%= user.number %>
                <%= user.phone %> 
                <%= user.note %>
            </div>
            <a class="ui orange basic button" href="/users/<%= user._id %>/edit">Edit</a>
            <form id="delete" action="/users/<%= user._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
        </div>
    </div>
</div>

<% include ./partials/footer %>